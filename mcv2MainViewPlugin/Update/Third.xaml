<UserControl x:Class="mcv2MainViewPlugin.Update.Third"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mcv2MainViewPlugin.Update"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="80,59,0,0" TextWrapping="Wrap" Text="最新版をインストールしています..." FontSize="20" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="80,120,0,0" TextWrapping="Wrap" Text="完了次第コメビュを自動的に再起動します" FontSize="20" VerticalAlignment="Top"/>
        <ProgressBar Maximum="100" Minimum="0" Value="{Binding ProgressPercentage}" HorizontalAlignment="Center" Width="500" Height="30" />
    </Grid>
</UserControl>
