<UserControl x:Class="mcv2MainViewPlugin.Update.Forth"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mcv2MainViewPlugin.Update"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="インストールが完了しました。コメビュを自動的に再起動します" VerticalAlignment="Center" FontSize="20" />
        <Button Content="OK" Command="{Binding CloseCommand}" HorizontalAlignment="Center" Margin="0,0,0,5" VerticalAlignment="Bottom" Width="75"/>

    </Grid>
</UserControl>
